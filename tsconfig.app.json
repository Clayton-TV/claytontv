{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts",
    "js/**/*",
    "js/**/*.vue"
  ],
  "exclude": [
    "js/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./resources/js/components/*"],
      "~/*": ["./resources/js/*"]
    }
  }
}
