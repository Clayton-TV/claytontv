{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts",
    "resources/js/**/*",
    "resources/js/**/*.vue"
  ],
  "exclude": [
    "resources/js/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "declarationDir": "./node_modules/.tmp/types",

    "types": [
      "vite/client",
      "./resources/js/types"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
