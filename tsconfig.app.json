{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts",
    "js/**/*",
    "js/**/*.vue"
  ],
  "exclude": [
    "js/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
